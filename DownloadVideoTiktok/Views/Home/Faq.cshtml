                <div class="card-body">
                    <p><span style="color: rgb(33, 37, 41);">How to download all videos from chanel?</span></p>
                </div>
            </div>
        </div>
    </div>
</div>




@* Real *@
<div class="bs-docs-section">
    <div class="accordion" id="accordionFaq">
        @foreach (var item in Model.List.Select((v, i) => new { Value = v, Index = i }))
        {
            @await Html.PartialAsync("~/Views/Shared/_EditContentPartial.cshtml", item.Value)
            <div class="card">
                <div class="card-header" id="headingFaq_@item.Index">
                    <h2 class="mb-0">
                        <button class="btn btn-link btn-block text-left text-secondary" type="button" data-toggle="collapse" data-target="#collapseFaq_@item.Index" aria-expanded="true" aria-controls="collapseFaq_@item.Index">
                            @item.Value.Name
                        </button>
                    </h2>
                </div>
                <div id="collapseFaq_@item.Index" class="collapse @(item.Index == 0 ? "show" : string.Empty)" aria-labelledby="headingFaq_@item.Index" data-parent="#accordionFaq">
                    <div class="card-body">
                        @Html.Raw(item.Value.Detail)
                    </div>
                </div>
            </div>
        }
    </div>
</div>