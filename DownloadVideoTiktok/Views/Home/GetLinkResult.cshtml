@model DownloadVideoTiktok.Models.ExtractorItemModel

@{
    ViewData["Title"] = "Get link";
}

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        <p>Get link <b><a href="@Context.Request.Query["url"]" target="_blank">@Context.Request.Query["url"]</a></b> failed</p>
    </div>
}

@if (Model != null)
{
    <div class="alert alert-success" role="alert">
        <p>Get link <b><a href="@Context.Request.Query["url"]" target="_blank">@Context.Request.Query["url"]</a></b> success</p>
    </div>

    <div class="row">
        <div class="col-md-4 col-sm-6">
            <img src="@Model.Avatar" class="img-fluid" />
            <div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <button type="button" class="btn btn-success mt-3 btn-getlink-download" data-id="@Model.Id" data-trigger="1">Download</button>
            </div>
        </div>
    </div>
}