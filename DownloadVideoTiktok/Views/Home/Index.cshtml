@model DownloadVideoTiktok.Models.Article

@{
    ViewData["Title"] = Model.SEOTitle;
    ViewData["MetaTitle"] = Model.SEOTitle;
    ViewData["MetaDes"] = Model.SEODescrition;
    ViewData["MetaKeyword"] = Model.SEOKeywords;
}

<div id="homePage" class="container">
    <div class="row">
        <div class="col-xl-9 mx-auto text-center box__title">
            @await Html.PartialAsync("~/Views/Shared/_EditContentPartial.cshtml", Model)
            <h1 class="mb-5">@Html.Raw(Model.Detail)</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            <form id="form-video" novalidate>
                <div class="form-group">
                    <textarea id="txtUrl" class="form-control form-control-lg" name="url" rows="3" placeholder="Enter link or chanel, playlist, user...(support multiple)">@Context.Request.Query["url"]</textarea>
                </div>
                @*<div class="form-group">
                        <div id="rcGetVideo"></div>
                    </div>*@
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-lg button-dow rounded-pill">DownLoad <i class="fas fa-download"></i></button>
                </div>
            </form>
        </div>
        <div class="col-md-12 box-result"></div>
    </div>
</div>

<div class="Box__guid-sup d-flex flex-sm-column flex-md-row border border-right-0 border-left-0 my-3">
    @*Guide*@
    <div class="box__guid my-3 p-3 bg-white rounded flex-shrink-0 flex-basis-60">
        @await Html.PartialAsync("~/Views/Shared/_EditContentPartial.cshtml", ViewBag.GuideContent as Article)
        @Html.Raw(ViewBag.GuideContent.Detail)
    </div>
    @*Box Supp*@
    <div class="box__support my-3 p-3 bg-white rounded">
        <h6 class="border-bottom border-gray pb-2 mb-0">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16" style="transform: scale(1.5)">
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
            </svg>
        @ViewBag.SourceContent.Summary</h6>
        <div class="mt-2 list-supported">
            @await Html.PartialAsync("~/Views/Shared/_EditContentPartial.cshtml", ViewBag.SourceContent as Article)
            @Html.Raw(ViewBag.SourceContent.Detail)
        </div>
    </div>
</div>
@*<hr class="featurette-divider">*@
<div class="container marketing">
    @await Html.PartialAsync("~/Views/Shared/_EditContentPartial.cshtml", ViewBag.HighLightContent as Article)
    @Html.Raw(ViewBag.HighLightContent.Detail)
</div>
@*<hr class="featurette-divider">*@
<div class="container">
    <div class="row message">
        <div class="col-xl-9 mx-auto">
            @await Html.PartialAsync("~/Views/Shared/_EditContentPartial.cshtml", ViewBag.FooterContent as Article)
            @Html.Raw(ViewBag.FooterContent.Detail)
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $('.box__guid h6').prepend("<span class='far ic--ques mr-2'></span>");
    </script>
    @*<script>
        var table = document.querySelector('.table');
        table.classList.add("table-striped");
    </script>*@
}