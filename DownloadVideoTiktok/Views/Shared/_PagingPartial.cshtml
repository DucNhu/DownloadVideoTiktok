@model DownloadVideoTiktok.Models.PagingModel

<nav>
    <ul class="pagination justify-content-center mt-5">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="@Context.Request.Path?page=@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = Model.CurrentPage - 2; i <= Model.CurrentPage + 2; i++)
        {
            if (i > 0 && i <= Model.TotalPage)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="@Context.Request.Path?page=@(i)">@i</a></li>
            }
        }
        @if (Model.CurrentPage < Model.TotalPage)
        {
            <li class="page-item disabled">
                <a class="page-link" href="@Context.Request.Path?page=@(Model.CurrentPage + 1)" aria-label="Previous">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>
