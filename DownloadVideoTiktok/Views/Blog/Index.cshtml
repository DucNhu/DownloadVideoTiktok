@model DownloadVideoTiktok.Models.PageListModel<DownloadVideoTiktok.Models.Article>

@{
    ViewData["Title"] = "Blogs";
}

<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Blogs</h1>
                    <span class="subheading">A Blog by Videodownhd</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @foreach (var item in Model.List)
            {
                <div class="post-preview">
                    @await Html.PartialAsync("~/Views/Shared/_EditContentPartial.cshtml", item)
                    <a href="/blogs/@item.Ascii">
                        <h2 class="post-title">
                            @item.Name
                        </h2>
                        <h3 class="post-subtitle">
                            @Html.Raw(item.Summary)
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="/">videodownhd.com</a>
                        on @item.DateCreated.Value.ToLongDateString()
                    </p>
                </div>
                <hr>
            }
            <div class="clearfix">
                @if (Model.CurrentPage < Model.TotalPage)
                {
                    <a class="btn btn-primary float-right" href="/blogs?page=@(Model.CurrentPage + 1)">Older Posts →</a>
                }

                @if (Model.CurrentPage > 1)
                {
                    <a class="btn btn-primary float-left" href="/blogs?page=@(Model.CurrentPage - 1)">← Newer Posts</a>
                }
            </div>
        </div>
    </div>
</div>
