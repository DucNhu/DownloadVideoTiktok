@inject Microsoft.Extensions.Options.IOptions<DownloadVideoTiktok.Infrastructure.WebConfig> webConfig

@{
    ViewData["Title"] = "SignIn";
}

@section Styles
{
    <environment include="Development">
        <link href="~/css/sign-in.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/sign-in.min.css" asp-append-version="true" />
    </environment>
}

<form class="form-signin" id="form-login" novalidate>
    <div class="text-center mb-4">
        <img class="mb-4" src="~/imgs/favicon.png" alt="logo.png" width="72" height="72" />
        <h1 class="box__title mb-3 font-weight-normal">Welcome</h1>
        <p>Enter information to sign in</p>
    </div>
    <div class="alert alert-warning d-none alert-login" role="alert">
        <strong>Alert!</strong> <span></span>
    </div>
    <div class="form-label-group">
        <input type="email" id="inputEmail" name="username" class="form-control rounded-pill" placeholder="Email address" required autofocus>
        <label class="lbl-float" for="inputEmail">
            Email Address&ensp;
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383l-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z" />
            </svg>
        </label>
    </div>
    <div class="d-flex align-items-center my-4">
        <div class="form-label-group flex-basis-100">
            <input type="password" id="inputPassword" name="password" class="form-control rounded-pill" placeholder="Password" required>
            <label class="lbl-float" for="inputPassword">
                Password&ensp;
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-lock-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 .5c-.662 0-1.77.249-2.813.525a61.11 61.11 0 0 0-2.772.815 1.454 1.454 0 0 0-1.003 1.184c-.573 4.197.756 7.307 2.368 9.365a11.192 11.192 0 0 0 2.417 2.3c.371.256.715.451 1.007.586.27.124.558.225.796.225s.527-.101.796-.225c.292-.135.636-.33 1.007-.586a11.191 11.191 0 0 0 2.418-2.3c1.611-2.058 2.94-5.168 2.367-9.365a1.454 1.454 0 0 0-1.003-1.184 61.09 61.09 0 0 0-2.772-.815C9.77.749 8.663.5 8 .5zm.5 7.415a1.5 1.5 0 1 0-1 0l-.385 1.99a.5.5 0 0 0 .491.595h.788a.5.5 0 0 0 .49-.595L8.5 7.915z" />
                </svg>
            </label>
        </div>
        @*EYES*@
        <span onclick="showPass()" class="eye-check">
            <svg xmlns="http://www.w3.org/2000/svg" id="eyeShow" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z" />
                <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
            </svg>

            <svg xmlns="http://www.w3.org/2000/svg" id="eyeNone" width="16" height="16" fill="currentColor" class="bi bi-eye-slash" viewBox="0 0 16 16">
                <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z" />
                <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299l.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z" />
                <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709z" />
                <path fill-rule="evenodd" d="M13.646 14.354l-12-12 .708-.708 12 12-.708.708z" />
            </svg>
        </span>
    </div>
        <div class="checkbox mb-3 ml-1">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <div class="form-group d-flex justify-content-center">
            <div id="rcLogin"></div>
        </div>
        <button class="btn btn-lg button--sub btn-block" type="submit">Sign in</button>
</form>
<environment include="Development">
    <script>
        var pass = document.querySelector('#inputPassword');

        var eyesShow = document.querySelector("#eyeShow");
        var eyesHidd = document.querySelector("#eyeNone");
        eyesHidd.style.display = "none";

        var show = false;

        function showPass() {
            if (show) {
                pass.setAttribute('type', 'text');
                show = false;

                eyesHidd.style.display = "block";
                eyesShow.style.display = "none";
            }

            else {
                pass.setAttribute('type', 'password');
                show = true;

                eyesHidd.style.display = "none";
                eyesShow.style.display = "block";
            }
        }

    </script>
</environment>